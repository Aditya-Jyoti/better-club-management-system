generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Auth {
    id    String @id @default(uuid())
    email String @unique
    user  User   @relation(fields: [id, email], references: [id, email])

    created_at      DateTime  @default(now())
    last_login      DateTime?
    hashed_password String    @unique
    scopes          String[]

    @@unique([id, email])
}

model User {
    id    String @id
    email String @unique
    auth  Auth?

    first_name String
    last_name  String
    phone      String

    role       Roles
    department Departments

    @@unique([id, email])
}

enum Roles {
    UPPER_MANAGEMENT
    DEPARTMENT_LEADS
    JUNIOR_DEPARTMENT_LEADS
    MEMBER
}

enum Departments {
    TECHNICAL
    MANAGEMENT
    SOCIAL_MEDIA
    DESIGN
}
